                android:id="@+id/third_q8"
                android:textColor="#000000"
                android:textSize="15sp"
                android:background="@drawable/questionright"
                android:layout_width="300dp"
                android:layout_marginLeft="120dp"
                android:padding="4dp"
                android:layout_height="wrap_content"
                android:text=" Do you use lift in your building?" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="no.7"
                android:layout_marginLeft="2dp"
                android:padding="2dp"
                android:layout_marginTop="32dp"
                android:textColor="#000000"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/third_q9"
                android:background="@drawable/questionshape"
                android:layout_width="300dp"
                android:padding="16dp"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:text="Did you turn off your light while sleeping?" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text=""/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>

