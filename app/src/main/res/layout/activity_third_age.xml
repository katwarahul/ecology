<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".first_age"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="no.1"
                android:layout_marginLeft="2dp"
                android:padding="2dp"
                android:layout_marginTop="32dp"
                android:textColor="#000000"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/third_q1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textColor="#000000"
                android:textSize="15sp"
                android:background="@drawable/questionshape"
                android:text="Do you see ratings for appliances you buy?" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="no.2"
                android:layout_marginLeft="320dp"
                android:padding="2dp"
                android:layout_marginTop="32dp"
                android:textColor="#000000"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/third_q2"
                android:padding="4dp"
                android:layout_marginLeft="120dp"
                android:background="@drawable/questionright"
                android:layout_width="match_parent"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:text=" Do you smoke?" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="no.3"
                android:layout_marginLeft="2dp"
                android:padding="2dp"
                android:layout_marginTop="32dp"
                android:textColor="#000000"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/third_q3"
                android:background="@drawable/questionshape"
                android:layout_width="300dp"
                android:padding="8dp"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:text="How much LPG used you using per month?" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="no.4"
                android:layout_marginLeft="320dp"
                android:padding="2dp"
                android:layout_marginTop="32dp"
                android:textColor="#000000"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/third_q4"
                android:textColor="#000000"
                android:textSize="15sp"
                android:background="@drawable/questionright"
                android:layout_width="300dp"
                android:layout_marginLeft="120dp"
                android:padding="4dp"
                android:layout_height="wrap_content"
                android:text=" How often you go for dinner?" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="no.5"
                android:layout_marginLeft="2dp"
                android:padding="2dp"
                android:layout_marginTop="32dp"
                android:textColor="#000000"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/third_q5"
                android:background="@drawable/questionshape"
                android:layout_width="300dp"
                android:padding="16dp"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:text="Do you carry water bottle while travelling?" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="no.6"
                android:layout_marginLeft="320dp"
                android:padding="2dp"
                android:layout_marginTop="32dp"
                android:textColor="#000000"
                android:textSize="15sp"/>
