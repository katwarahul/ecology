<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#241332">
    <TextView
        android:layout_width="match_parent"
        android:padding="15dp"
        android:layout_height="70dp"
        android:text="     Daily task"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"
        android:background="@drawable/point_table"
        />
    <ScrollView
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".first_age"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="no.1"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="2dp"
                android:padding="2dp"
                android:layout_marginTop="32dp"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/first_q1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/questionshape"
                android:padding="20dp"
                android:text="Where do you throw garbage especially toffee,chocolate rappers?"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="no.2"
                android:layout_marginLeft="320dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:padding="2dp"
                android:layout_marginTop="32dp"
                android:textSize="15sp"/>


            <TextView
                android:id="@+id/first_q2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:padding="12dp"
                android:background="@drawable/questionright"
                android:text=" How many hours you watch TV?"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="no.3"
                android:layout_marginLeft="2dp"
                android:padding="2dp"
                android:layout_marginTop="32dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/first_q3"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/questionshape"
                android:padding="20dp"
                android:text="Are you throwing your toys to garbage or giving them to others for use?"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="no.4"
                android:layout_marginLeft="320dp"
                android:padding="2dp"
                android:layout_marginTop="32dp"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/first_q4"
                android:background="@drawable/questionright"
                android:layout_width="300dp"
                android:layout_marginLeft="50dp"
                android:padding="12dp"
                android:textColor="#FFFFFF"
                android:layout_height="wrap_content"
                android:text=" Have you planted any tree?" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="no.5"
                android:layout_marginLeft="2dp"
                android:padding="2dp"
                android:layout_marginTop="32dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/first_q5"
                android:background="@drawable/questionshape"
                android:layout_width="300dp"
                android:padding="26dp"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:text="Mode of transportation for school?" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                />
        </LinearLayout>

    </ScrollView>

</LinearLayout>

